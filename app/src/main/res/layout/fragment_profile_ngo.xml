<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.ngo.ProfileNGOFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        android:id="@+id/text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Profile NGO"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password_placeholder_ngo"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:layout_constraintStart_toStartOf="@+id/text"
        android:layout_marginTop="50dp"
        android:text="Password PlaceHolder"
        android:textSize="30sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Logout_button"
        app:layout_constraintTop_toBottomOf="@+id/password_placeholder_ngo"
        app:layout_constraintStart_toStartOf="@+id/password_placeholder_ngo"
        android:layout_marginTop="50dp"
        android:text="Log Out"
        android:textSize="25sp" />

</androidx.constraintlayout.widget.ConstraintLayout>
