<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="ui.ngo.posts.LocationSelectorNGOFragment">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancel_button"
        android:text="Cancel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:background="@null" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/done_button"
        android:text="Done"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:background="@color/light_green" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/street_text"
        android:textSize="13sp"
        android:text="Street Address:"
        app:layout_constraintTop_toTopOf="@id/street_input"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/street_input"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/done_button"
        app:layout_constraintStart_toEndOf="@id/street_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/city_text"
        android:textSize="13sp"
        android:text="City:"
        app:layout_constraintTop_toTopOf="@id/city_input"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp" />

    <EditText
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:id="@+id/city_input"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/street_input"
        app:layout_constraintTop_toBottomOf="@id/street_input"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/state_text"
        android:textSize="13sp"
        android:text="State:"
        app:layout_constraintTop_toTopOf="@id/state_input"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp" />

    <Spinner
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/state_input"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/city_input"
        app:layout_constraintStart_toStartOf="@id/city_input"
        app:layout_constraintEnd_toEndOf="@id/city_input"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/zipcode_text"
        android:textSize="13sp"
        android:text="Zip code:"
        app:layout_constraintTop_toTopOf="@id/zipcode_input"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/zipcode_input"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/state_input"
        app:layout_constraintTop_toBottomOf="@id/state_input"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/distance_text"
        android:textSize="13sp"
        android:text="Distance (in km):"
        app:layout_constraintTop_toTopOf="@id/distance_input"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/distance_input"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/zipcode_input"
        app:layout_constraintTop_toBottomOf="@id/zipcode_input"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>