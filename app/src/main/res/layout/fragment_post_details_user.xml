<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.user.posts.PostDetailsUserFragment">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:id="@+id/post_details_user_back_button"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:id="@+id/delimiter"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@color/design_default_color_secondary"
        app:layout_constraintTop_toBottomOf="@+id/post_details_user_back_button"/>

    <ImageView
        android:id="@+id/post_details_user_img"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@+id/delimiter"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"
        android:id="@+id/category"
        app:layout_constraintStart_toEndOf="@+id/post_details_user_img"
        app:layout_constraintTop_toBottomOf="@+id/delimiter"
        android:text="Desk"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:id="@+id/size"
        app:layout_constraintStart_toEndOf="@+id/post_details_user_img"
        app:layout_constraintTop_toBottomOf="@+id/category"
        android:text="Desk"
        android:textSize="15sp" />
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="50dp"
    android:layout_marginStart="40dp"
    android:id="@+id/delete"
    app:layout_constraintStart_toEndOf="@+id/post_details_user_img"
    app:layout_constraintTop_toBottomOf="@+id/size"
    android:text="delete"
    android:textSize="15sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:padding="13dp"
        android:id="@+id/status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete"
        android:text="delete"
        android:textSize="18sp"
        android:background="@color/light_green"/>

</androidx.constraintlayout.widget.ConstraintLayout>